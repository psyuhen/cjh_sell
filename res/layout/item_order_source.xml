<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_margin="10.0dip" >

        <TextView
            android:id="@+id/item_order_source_date"
            style="@style/item_order_source_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/item_order_source_total_text"
            style="@style/item_order_source_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/item_order_source_total_text" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_margin="10.0dip" >

        <TextView
            android:id="@+id/item_order_source_pocket_text"
            style="@style/item_order_source_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/item_order_source_pocket_text" />

        <TextView
            android:id="@+id/item_order_source_add"
            style="@style/item_order_source_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12.0dip"
            android:layout_toRightOf="@+id/item_order_source_pocket_text"
            android:text="@string/item_order_source_add" />

        <TextView
            android:id="@+id/item_order_source_other_text"
            style="@style/item_order_source_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12.0dip"
            android:layout_toRightOf="@+id/item_order_source_add"
            android:text="@string/item_order_source_other_text" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_margin="10.0dip" >

        <TextView
            android:id="@+id/item_order_source_pocket"
            style="@style/item_order_source_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35.0dip"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/item_order_source_other"
            style="@style/item_order_source_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80.0dip"
            android:layout_toRightOf="@+id/item_order_source_pocket" />

        <TextView
            android:id="@+id/item_order_source_total"
            style="@style/item_order_source_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

</LinearLayout>