<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitebg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60.0dip"
        android:background="#f58220" >

        <TextView
            android:id="@+id/test"
            style="@style/white_normal_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12.0dip"
            android:layout_centerVertical="true"
            android:text="@string/choose_category" />
        
        <Button 
            android:id="@+id/add_category_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_common"
            style="@style/white_normal_style"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/add_category_btn_text"
            android:paddingLeft="5.0dip"
            android:paddingRight="5.0dip"
            />
        
    </RelativeLayout>

    <ImageView style="@style/left_drawer_item_line"
         />

    <ListView
        android:layout_marginTop="10.0dip"
        android:id="@+id/category_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>