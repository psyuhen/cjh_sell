<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <include
        android:id="@+id/title_bar"
        layout="@layout/title_bar" />

    <ScrollView
        android:id="@+id/order_details_scrollview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_bar" >

        <LinearLayout
            android:id="@+id/order_details_content_ll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/order_details_ll1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10.0dip"
                android:layout_marginTop="20.0dip"
                android:background="@color/whitebg"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/order_details_info_text"
                    style="@style/order_details_black_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10.0dip"
                    android:text="@string/order_details_info_text" />

                <ImageView style="@style/order_details_line" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip"
                    android:background="@color/whitebg"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/order_details_serial_text"
                        style="@style/order_details_gray_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:text="@string/order_details_serial_text" />

                    <TextView
                        android:id="@+id/order_details_serial"
                        style="@style/order_details_black_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip"
                    android:background="@color/whitebg"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/order_details_time_text"
                        style="@style/order_details_gray_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:text="@string/order_details_time_text" />

                    <TextView
                        android:id="@+id/order_details_time"
                        style="@style/order_details_black_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip"
                    android:background="@color/whitebg"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/order_details_payway_text"
                        style="@style/order_details_gray_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:text="@string/order_details_payway_text" />

                    <TextView
                        android:id="@+id/order_details_payway"
                        style="@style/order_details_black_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8.0dip"
                    android:layout_marginTop="5.0dip"
                    android:background="@color/whitebg"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/order_details_status_text"
                        style="@style/order_details_gray_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:text="@string/order_details_status_text" />

                    <TextView
                        android:id="@+id/order_details_status"
                        style="@style/order_details_black_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/order_details_ll2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10.0dip"
                android:layout_marginTop="20.0dip"
                android:background="@color/whitebg"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/order_details_goodsinfo_text"
                    style="@style/order_details_black_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10.0dip"
                    android:text="@string/order_details_goodsinfo_text" />

                <ImageView style="@style/order_details_line" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10.0dip"
                    android:orientation="horizontal" >

                    <ListView
                        android:id="@+id/order_details_goodslist"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/order_details_ll3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10.0dip"
                android:layout_marginTop="20.0dip"
                android:background="@color/whitebg"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/order_details_delivery_text"
                    style="@style/order_details_black_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10.0dip"
                    android:text="@string/order_details_delivery_text" />

                <ImageView style="@style/order_details_line" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip"
                    android:background="@color/whitebg"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/order_details_person_text"
                        style="@style/order_details_gray_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:text="@string/order_details_person_text" />

                    <TextView
                        android:id="@+id/order_details_person"
                        style="@style/order_details_black_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip"
                    android:background="@color/whitebg"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/order_details_tel_text"
                        style="@style/order_details_gray_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:text="@string/order_details_tel_text" />

                    <TextView
                        android:id="@+id/order_details_tel"
                        style="@style/order_details_black_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip"
                    android:background="@color/whitebg"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/order_details_address_text"
                        style="@style/order_details_gray_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:text="@string/order_details_address_text" />

                    <TextView
                        android:id="@+id/order_details_address"
                        style="@style/order_details_black_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8.0dip"
                    android:layout_marginTop="5.0dip"
                    android:background="@color/whitebg"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/order_details_deliverytime_text"
                        style="@style/order_details_gray_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:text="@string/order_details_deliverytime_text" />

                    <TextView
                        android:id="@+id/order_details_deliverytime"
                        style="@style/order_details_black_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8.0dip"
                    android:layout_marginTop="5.0dip"
                    android:background="@color/whitebg"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/order_details_bill_text"
                        style="@style/order_details_gray_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:text="@string/order_details_bill_text" />

                    <TextView
                        android:id="@+id/order_details_bill"
                        style="@style/order_details_black_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/order_details_ll4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10.0dip"
                android:layout_marginTop="20.0dip"
                android:background="@color/whitebg"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/order_details_money_text"
                    style="@style/order_details_black_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10.0dip"
                    android:text="@string/order_details_money_text" />

                <ImageView style="@style/order_details_line" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip"
                    android:background="@color/whitebg" >

                    <TextView
                        android:id="@+id/order_details_allmoney_text"
                        style="@style/order_details_gray_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:text="@string/order_details_allmoney_text" />

                    <TextView
                        android:id="@+id/order_details_allmoney"
                        style="@style/order_details_black_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginRight="10.0dip" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8.0dip"
                    android:background="@color/whitebg" >

                    <TextView
                        android:id="@+id/order_details_freight_text"
                        style="@style/order_details_gray_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:text="@string/order_details_freight_text" />

                    <TextView
                        android:id="@+id/order_details_freight"
                        style="@style/order_details_black_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginRight="10.0dip" />
                </RelativeLayout>

                <ImageView style="@style/order_details_line" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8.0dip"
                    android:background="@color/whitebg" >

                    <TextView
                        android:id="@+id/order_details_shoulpay_text"
                        style="@style/order_details_gray_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:text="@string/order_details_shoulpay_text" />

                    <TextView
                        android:id="@+id/order_details_shoulpay"
                        style="@style/order_details_red_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginRight="10.0dip" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_below="@+id/order_details_scrollview"
        android:id="@+id/order_details_bottom"
        android:layout_marginTop="5.0dip"
        android:layout_width="fill_parent"
        android:layout_height="60.0dip"
        android:layout_alignParentBottom="true"
         >

        <ImageView style="@style/order_details_line" />

        <Button
            android:id="@+id/order_details_delete_order_btn"
            style="@style/order_details_gray_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20.0dip"
            android:layout_toLeftOf="@+id/order_details_transport_btn"
            android:background="@drawable/btn_order_details"
            android:padding="10.0dip"
            android:layout_marginTop="5.0dip"
            android:text="@string/delete_order_text" />

        <Button
            android:id="@+id/order_details_transport_btn"
            style="@style/order_details_gray_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20.0dip"
            android:background="@drawable/btn_order_details"
            android:layout_marginTop="5.0dip"
            android:padding="10.0dip"
            android:text="@string/order_details_transport_btn" />
    </RelativeLayout>

</RelativeLayout>