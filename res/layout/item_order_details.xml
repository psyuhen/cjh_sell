<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/item_order_details_image"
        android:layout_width="50.0dip"
        android:layout_height="80.0dip"
        android:layout_margin="6.0dip" />

    <RelativeLayout
        android:id="@+id/item_order_details_content_rl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20.0dip" >
        <TextView
            android:layout_marginTop="10.0dip"
            android:id="@+id/item_order_details_title"
            style="@style/order_details_black_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="80.0dip" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:layout_below="@+id/item_order_details_title"
            android:layout_marginTop="10.0dip">

            <TextView
                android:id="@+id/item_order_details_num_text"
                style="@style/order_details_gray_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_order_details_num_text" />

            <TextView
                android:id="@+id/order_details_num"
                style="@style/order_details_black_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip" />

            <TextView
                android:id="@+id/item_order_details_money_text"
                style="@style/order_details_gray_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_order_details_money_text" />

            <TextView
                android:id="@+id/order_details_money"
                style="@style/order_details_black_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>