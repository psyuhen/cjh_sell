<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_bg"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="20.0dip"
                android:background="@color/whitebg"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/image_top_line"
                    style="@style/decorate_image_line"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="20.0dip" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/decorate_item_height"
                android:background="@color/whitebg" >

                <ImageView
                    android:id="@+id/orcode_image"
                    android:layout_width="20.0dip"
                    android:layout_height="20.0dip"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20.0dip"
                    android:background="@drawable/decorate_orcode_icon" />

                <TextView
                    android:id="@+id/title_orcode"
                    style="@style/decorate_small_black_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/orcode_image"
                    android:text="@string/title_orcode" />

                <ImageView
                    android:id="@+id/decorate_arrow_image"
                    android:layout_width="@dimen/arrow_width"
                    android:layout_height="@dimen/arrow_height"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20.0dip"
                    android:background="@drawable/arrow_right_icon" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.0dip"
                android:background="@color/gray_line" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/whitebg"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/decorate_note_image"
                        android:layout_width="40.0dip"
                        android:layout_height="40.0dip"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/decorate_icon1" />

                    <TextView
                        android:id="@+id/decorate_note_text"
                        style="@style/decorate_small_black_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/decorate_note_image"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5.0dip"
                        android:text="@string/decorate_note_text" />
                </RelativeLayout>

                <View
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/gray_line" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/decorate_weixin_image"
                        android:layout_width="40.0dip"
                        android:layout_height="40.0dip"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/decorate_icon2" />

                    <TextView
                        android:id="@+id/decorate_weixin_text"
                        style="@style/decorate_small_black_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/decorate_weixin_image"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5.0dip"
                        android:text="@string/decorate_weixin_text" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/decorate_center_ll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:background="@color/whitebg"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/freight_rl"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/decorate_item_height" >

                    <TextView
                        android:id="@+id/decorate_freight_text"
                        style="@style/decorate_black_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20.0dip"
                        android:text="@string/decorate_freight_text" />

                    <TextView
                        android:id="@+id/decorate_freight"
                        style="@style/decorate_gray_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10.0dip"
                        android:layout_toLeftOf="@+id/decorate_freight_right"
                        android:text="@string/decorate_freight" />

                    <ImageView
                        android:id="@+id/decorate_freight_right"
                        android:layout_width="@dimen/arrow_width"
                        android:layout_height="@dimen/arrow_height"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20.0dip"
                        android:background="@drawable/arrow_right_icon" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.0dip"
                    android:layout_marginLeft="20.0dip"
                    android:background="@color/gray_line" />

                <RelativeLayout
                    android:id="@+id/show_rl"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/decorate_item_height" >

                    <TextView
                        android:id="@+id/decorate_show_text"
                        style="@style/decorate_black_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20.0dip"
                        android:text="@string/decorate_show_text" />

                    <TextView
                        android:id="@+id/decorate_show"
                        style="@style/decorate_gray_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10.0dip"
                        android:layout_toLeftOf="@+id/decorate_show_right"
                        android:text="@string/decorate_show" />

                    <ImageView
                        android:id="@+id/decorate_show_right"
                        android:layout_width="@dimen/arrow_width"
                        android:layout_height="@dimen/arrow_height"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20.0dip"
                        android:background="@drawable/arrow_right_icon" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/decorate_cashondelivery_ll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:background="@color/whitebg"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/cashondelivery_rl"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/decorate_item_height" >

                    <TextView
                        android:id="@+id/decorate_cashondelivery_text"
                        style="@style/decorate_black_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20.0dip"
                        android:text="@string/decorate_cashondelivery_text" />

                    <TextView
                        android:id="@+id/decorate_cashondelivery"
                        style="@style/decorate_gray_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10.0dip"
                        android:layout_toLeftOf="@+id/decorate_cashondelivery_right"
                        android:text="@string/decorate_cashondelivery" />

                    <ImageView
                        android:id="@+id/decorate_cashondelivery_right"
                        android:layout_width="@dimen/arrow_width"
                        android:layout_height="@dimen/arrow_height"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20.0dip"
                        android:background="@drawable/arrow_right_icon" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.0dip"
                    android:layout_marginLeft="20.0dip"
                    android:background="@color/gray_line" />

                <RelativeLayout
                    android:id="@+id/sevenday_rl"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/decorate_item_height" >

                    <TextView
                        android:id="@+id/decorate_sevenday_text"
                        style="@style/decorate_black_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20.0dip"
                        android:text="@string/decorate_sevenday_text" />

                    <TextView
                        android:id="@+id/decorate_sevenday"
                        style="@style/decorate_gray_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10.0dip"
                        android:layout_toLeftOf="@+id/decorate_sevenday_right"
                        android:text="@string/decorate_sevenday" />

                    <ImageView
                        android:id="@+id/decorate_sevenday_right"
                        android:layout_width="@dimen/arrow_width"
                        android:layout_height="@dimen/arrow_height"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20.0dip"
                        android:background="@drawable/arrow_right_icon" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.0dip"
                    android:layout_marginLeft="20.0dip"
                    android:background="@color/gray_line" />

                <RelativeLayout
                    android:id="@+id/guarantee_rl"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/decorate_item_height" >

                    <TextView
                        android:id="@+id/decorate_guarantee_text"
                        style="@style/decorate_black_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20.0dip"
                        android:text="@string/decorate_guarantee_text" />

                    <TextView
                        android:id="@+id/decorate_guarantee"
                        style="@style/decorate_gray_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10.0dip"
                        android:layout_toLeftOf="@+id/decorate_guarantee_right"
                        android:text="@string/decorate_guarantee" />

                    <ImageView
                        android:id="@+id/decorate_guarantee_right"
                        android:layout_width="@dimen/arrow_width"
                        android:layout_height="@dimen/arrow_height"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20.0dip"
                        android:background="@drawable/arrow_right_icon" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.0dip"
                    android:layout_marginLeft="20.0dip"
                    android:background="@color/gray_line" />

                <RelativeLayout
                    android:id="@+id/weixin_rl"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/decorate_item_height" >

                    <TextView
                        android:id="@+id/decorate_weixinpay_text"
                        style="@style/decorate_black_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20.0dip"
                        android:text="@string/decorate_weixinpay_text" />

                    <TextView
                        android:id="@+id/decorate_weixinpay"
                        style="@style/decorate_gray_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10.0dip"
                        android:layout_toLeftOf="@+id/decorate_weixinpay_right"
                        android:text="@string/decorate_weixinpay" />

                    <ImageView
                        android:id="@+id/decorate_weixinpay_right"
                        android:layout_width="@dimen/arrow_width"
                        android:layout_height="@dimen/arrow_height"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20.0dip"
                        android:background="@drawable/arrow_right_icon" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>