<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false"><shape android:shape="rectangle">

            <!-- 填充的颜色 -->
            <solid android:color="@color/white_bg"></solid>
            <!-- 设置按钮的四个角为弧形 -->
            <stroke android:width="1.0dip" android:color="@color/red" />
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="5dip" />
            <!-- padding：Button里面的文字与Button边界的间隔 -->
            <solid android:color="@color/red" />

            <padding android:left="5.0dip" android:right="5.0dip" />
        </shape></item>
    <item android:state_pressed="true"><shape android:shape="rectangle">
            <solid android:color="@color/gray_text" />

            <corners android:radius="5dip" />
        </shape></item>

</selector>