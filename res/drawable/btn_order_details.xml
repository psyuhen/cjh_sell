<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false"><shape android:shape="rectangle">

            <!-- 填充颜色 -->
            <solid android:color="@color/whitebg"></solid>
            <!-- 矩形的圆角半径 -->
            
            <corners android:radius="1.0dp" />
            <stroke android:width="1.0dip" android:color="@color/black_text" />
        </shape></item>
    <item android:state_pressed="true"><shape android:shape="rectangle">

            <!-- 填充颜色 -->
            <solid android:color="@color/orange"></solid>
            <!-- 矩形的圆角半径 -->
            <corners android:radius="4.0dp" />
            <stroke android:width="1.0dip" android:color="@color/black_text" />
        </shape></item>

</selector>